-module(gsserv).
-compile(export_all).

start() ->
	try
		Pid = spawn(?MODULE, loop, []),
		docserver:start(),
		dbserver:start(),
		imgserver:start(),
		register(gsserver, Pid),
	catch
		_:_ -> error
	end.

stop() ->
	unregister(gsserver),
	exit(self(), kill).

loop() ->
	receive
		{Pid, Ref, Tag, Data} ->
			case Tag of
				img -> imgserver ! {Pid, Ref, Tag, Data};
				doc -> docserver ! {Pid, Ref, Tag, Data};
				dbquery -> dbserver ! {Pid, Ref, get, Data}
			end,
			loop()
end.
